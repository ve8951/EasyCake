<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent" android:background="@drawable/transparentbg">

	<RelativeLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/cityiconlayout">


		<ImageView android:layout_height="wrap_content"
			android:layout_width="70dip" android:id="@+id/cityicon" android:src="@drawable/icon"
			android:layout_alignParentLeft="true" android:layout_marginTop="30dip" />

	</RelativeLayout>



	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_toRightOf="@+id/cityiconlayout"
		android:id="@+id/citydetaillayout">


		<TextView android:layout_width="wrap_content" android:id="@+id/cityname"
			android:text="City Name" android:layout_height="wrap_content"
			android:layout_alignParentLeft="true" android:paddingTop="50dip"></TextView>


		<!--


			<ImageView android:src="@drawable/jobguarantee"
			android:layout_height="40dip" android:layout_width="40dip"
			android:id="@+id/jobguarantee" android:layout_alignParentRight="true"
			android:layout_marginTop="30dip"></ImageView>
		-->
	</RelativeLayout>

</RelativeLayout>
