<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="wrap_content" android:background="@drawable/background" >

	<include layout="@layout/header" android:id="@+id/headerpage"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:layout_alignParentTop="true" />


	<GridView android:id="@+id/gridview" 
	android:layout_width="wrap_content"	android:layout_height="wrap_content" 
	android:columnWidth="800dp"	android:numColumns="2" 
	android:verticalSpacing="20dp" 	android:layout_marginTop="20dp"
	android:layout_below="@+id/headerpage" android:layout_above="@+id/footerpage"
		android:horizontalSpacing="20dp" android:stretchMode="columnWidth"
		android:gravity="center" />

	<include layout="@layout/footer" android:id="@+id/footerpage"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:layout_alignParentBottom="true" />
	
	


</RelativeLayout> 

