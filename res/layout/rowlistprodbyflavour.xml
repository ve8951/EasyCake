<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="wrap_content">


	<RelativeLayout android:layout_width="wrap_content"
		android:layout_alignBottom="@+id/productdetaillayout"
		android:layout_height="wrap_content" android:id="@+id/productsiconlayout">


		<ImageView android:layout_height="wrap_content"
			android:layout_width="70dip" android:id="@+id/producticon"
			android:src="@drawable/icon" android:layout_centerInParent="true"
			android:layout_marginTop="30dip" />

	</RelativeLayout>



	<RelativeLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_toRightOf="@+id/productsiconlayout"
		android:id="@+id/productdetaillayout">


		<TextView android:layout_width="wrap_content" android:id="@+id/productname"
			android:text="Product Name" android:layout_height="wrap_content"
			android:layout_alignParentLeft="true" android:layout_marginTop="20dip"
			android:textColor="#000000"></TextView>
		<TextView android:layout_height="wrap_content" android:id="@+id/ingridientTV"
			android:text="Ingredient" android:layout_width="wrap_content"
			android:layout_marginTop="40dip" android:layout_alignParentLeft="true"
			android:textColor="#000000"></TextView>
		<TextView android:layout_height="wrap_content" android:id="@+id/weightTV"
			android:text="Weight" android:layout_width="wrap_content"
			android:layout_marginTop="60dip" android:layout_alignParentLeft="true"
			android:textColor="#000000"></TextView>

		<!--


			<ImageView android:src="@drawable/jobguarantee"
			android:layout_height="40dip" android:layout_width="40dip"
			android:id="@+id/jobguarantee" android:layout_alignParentRight="true"
			android:layout_marginTop="30dip"></ImageView>
		-->



	</RelativeLayout>
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_alignTop="@+id/productsiconlayout"
		android:layout_height="wrap_content" android:layout_alignBottom="@+id/productsiconlayout"
		android:id="@+id/productcheckboxlayout" android:layout_toRightOf="@+id/productdetaillayout">
		<Button android:layout_width="wrap_content" android:text="Add"
			android:layout_height="wrap_content" android:id="@+id/productAddToCaryBTN"
			android:layout_alignParentTop="true" android:layout_alignParentRight="true"
			android:layout_marginRight="14dp" android:background="@drawable/cart"></Button>

	</RelativeLayout>


</RelativeLayout>
